{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "DOM"
    ],
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "../dist"
  },
  "include": ["./**/*"]
}